{
  "swagger": "2.0",
  "info": {
      "title": "Internship",
      "description": "This module contains the assignment solver for the student allocation problem.",
      "contact": {
          "name": "Rasmus Jessen Aaskov"
      },
      "version": "1.0.0"
  },
  "schemes": [
      "http",
      "https"
      ],
  "consumes": [
      "application/json"
  ],
  "produces":[
      "application/json"
  ],
  "paths": {

    "/": {
      "get": {
        "description": "Returns message showing app is up and running",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },

    "/test": {
      "post": {
        "description": "Returns the exact same object that it is provided in body",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/test_data"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },

    "/solver": {
      "post": {
        "description": "Solve a new instance of the student allocation problem",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema" : {
              "$ref": "#/definitions/solver_data"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    }

  },
"definitions": {
    "test_data": {
        "type": "object",
        "properties": {
            "something1": {
                "type": "object",
                "properties": {
                    "string1": {
                        "type": "string",
                        "example": "content1"
                    },
                    "string2": {
                        "type": "string",
                        "example": "content2"
                    }
                }
            },
        }
    },
    "solver_data": {
        "type": "object",
        "properties": {
            "all_location_names": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "example": ["Pædiatrisk Afdeling Kolding", "Lægerne Enghavevej Nyborg", "Lægerne Valby"]
            },
            "all_location_capacities": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "example": [[1, 1], [1, 1], [1, 1]]
            },
            "all_student_names": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["John Smith", "Lily James"]
            },
            "all_week_names": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["Week 43", "Week 44"]
            },
            "all_internships": {
                "type": "array",
                "items": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    }
                },
                "example": [[0], [1, 2]]
            },
            "allocation_rule": {
              "type": "array",
              "items": {
                "type": "integer"
              },
              "example": [1, 1]
            },
            "max_time": {
              "type": "integer",
              "example": 10
            },
            "all_student_priorities": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    }
                  }
                },
                "example": [[[0],[1, 2]], [[0],[1, 2]]]
            },
        },
        "required": ["all_location_names", "all_location_capacities", "all_student_names", "all_student_priorities", "all_week_names", "all_internships", "allocation_rule"]
    }
}
}
